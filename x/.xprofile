#!/bin/sh

# This file in ran when X starts

xlayoutdisplay                                # Configure multiple monitor setup

setbg &                                       # Set background wallpaper
dunst &                                       # Setup notification deamon
picom --experimental-backend &                # Start compositor
clipmenud &                                   # Start clipboard manager
dwmblocks &                                   # Start dwmblocks
redshift &                                    # Start bluelight filter (redshift)
