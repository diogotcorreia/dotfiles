#!/bin/sh

# Show wifi ï‡« and percent strength or ïŸ€ if none.
# Show ïž– if connected to ethernet or ï€ if none.
# Show ï€£ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
ïŸ€: no wifi connection
ï‡«: wifi connection with quality
ï€: no ethernet
ïž–: ethernet working
ï€£: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ðŸ“¡ " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ï‡« ", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf "%s%s%s\n" "$wifiicon" "$(sed "s/down/ï€/;s/up/ïž–/" /sys/class/net/e*/operstate 2>/dev/null)" " $(sed "s/.*/ï€£/" /sys/class/net/tun*/operstate 2>/dev/null)"
